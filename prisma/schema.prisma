generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  VENDOR
  ADMIN
}

enum VendorStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())

  vendorProfile VendorProfile?
  cartItems     CartItem[]
  orders        Order[]
  eventJoins    EventParticipant[]
  events        Event[]
}

model VendorProfile {
  id     String       @id @default(cuid())
  userId String       @unique
  status VendorStatus @default(PENDING)

  user   User    @relation(fields: [userId], references: [id])
  venues Venue[]
}

model Venue {
  id          String @id @default(cuid())
  name        String
  description String
  city        String
  address     String @default("")
  imageUrl    String @default("")
  vendorId    String

  vendor VendorProfile @relation(fields: [vendorId], references: [id])
  fields Field[]
}

model Field {
  id       String @id @default(cuid())
  name     String
  type     String
  price    Int
  venueId  String
  imageUrl String @default("")

  venue      Venue       @relation(fields: [venueId], references: [id])
  cartItems  CartItem[]
  orderItems OrderItem[]
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  fieldId   String
  date      DateTime
  startHour Int
  endHour   Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  field Field @relation(fields: [fieldId], references: [id])
}

model Order {
  id            String      @id @default(cuid())
  userId        String
  totalAmount   Int
  status        OrderStatus @default(PENDING)
  customerName  String      @default("")
  customerPhone String      @default("")
  customerEmail String      @default("")
  notes         String      @default("")
  createdAt     DateTime    @default(now())

  user    User        @relation(fields: [userId], references: [id])
  items   OrderItem[]
  payment Payment?
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  fieldId   String
  date      DateTime
  startHour Int
  endHour   Int
  price     Int

  order Order @relation(fields: [orderId], references: [id])
  field Field @relation(fields: [fieldId], references: [id])
}

model Payment {
  id        String        @id @default(cuid())
  orderId   String        @unique
  amount    Int
  method    String
  status    PaymentStatus @default(PENDING)
  qrCode    String        @default("")
  expiredAt DateTime
  paidAt    DateTime?
  createdAt DateTime      @default(now())

  order Order @relation(fields: [orderId], references: [id])
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String
  date        DateTime
  startHour   Int
  endHour     Int
  ticketPrice Int
  capacity    Int
  creatorId   String
  createdAt   DateTime @default(now())

  creator      User               @relation(fields: [creatorId], references: [id])
  participants EventParticipant[]
}

model EventParticipant {
  id      String @id @default(cuid())
  eventId String
  userId  String

  event Event @relation(fields: [eventId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@unique([eventId, userId])
}